
<% if post.live? %>
<article>
  <div class="row">
    <div class="col-md-5">
      <div class="post-image">
        <div data-plugin-options="{&quot;directionNav&quot;:true}" class="flexslider">
          <div class="flex-viewport" style="overflow: hidden; position: relative;">
            <ul class="slides" style="width: 800%; transition-duration: 0s; transform: translate3d(0px, 0px, 0px);">
              <li style="width: 328px; float: left; display: block;" class="flex-active-slide">
                <img src="/cliponefrontend/assets/images/image01.jpg" draggable="false">
              </li>
              <li style="width: 328px; float: left; display: block;">
                <img src="/cliponefrontend/assets/images/image02.jpg" draggable="false">
              </li>
              <li style="width: 328px; float: left; display: block;">
                <img src="/cliponefrontend/assets/images/image03.jpg" draggable="false">
              </li>
              <li style="width: 328px; float: left; display: block;">
                <img src="/cliponefrontend/assets/images/image04.jpg" draggable="false">
              </li>
            </ul>
          </div>
          <ol class="flex-control-nav flex-control-paging">
            <li><a class="flex-active">1</a></li>
            <li><a>2</a></li>
            <li><a>3</a></li>
            <li><a>4</a></li>
          </ol>
          <ul class="flex-direction-nav">
            <li><a href="#" class="flex-prev flex-disabled" tabindex="-1"></a></li>
            <li><a href="#" class="flex-next"></a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-7">
      <div class="post-content">
        <h2><%= link_to post.title, refinery.blog_post_path(post) %></h2>
        <p>
          <% if blog_post_teaser_enabled? %>
          <%= blog_post_teaser(post) %>
          <% else %>
          <%= post.body.html_safe %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="post-meta">
        <span><i class="fa fa-calendar"></i><%= t('created_at', :scope => 'refinery.blog.shared.posts', :when => l(post.published_at.to_date, :format => :short)) %></span>
        <span>
          <i class="fa fa-user"></i>
          <%= "#{t('by', :scope => 'refinery.blog.posts.show')} #{post.author.username}" if post.author.present? %>
        </span>
        <span><i class="fa fa-tag"></i>
          <% if (categories = post.categories.translated).any? %>
          <aside class='filled_in'>
            <%= t('filled_in', :scope => 'refinery.blog.posts.show') %>
            <%=raw categories.collect { |category| link_to category.title, refinery.blog_category_path(category) }.to_sentence %>
          </aside>
          <% end %>
          <% if (tags = post.tags).any? %>
          <aside class='tagged'>
            <%= t('tagged', :scope => 'refinery.blog.posts.show') %>
            <%=raw tags.collect { |tag| link_to tag, refinery.blog_tagged_posts_path(tag.id, tag.name.parameterize) }.to_sentence %>
          </aside>
          <% end %>
        </span>
        <% if Refinery::Blog::Post.comments_allowed? %>
        <span><i class="fa fa-comments"></i>
          <a href="#"><%= link_to "#{t('title', :scope => 'refinery.blog.posts.show.comments')} (#{post.comments.approved.count})", refinery.blog_post_path(post) << '#comments' %></a>
        </span>
        <% end %>
        <% if blog_post_teaser_enabled? && post.custom_teaser.present? %>
        <%= link_to t('read_more', :scope => 'refinery.blog.shared.posts'), refinery.blog_post_path(post), class: "btn btn-xs btn-main-color pull-right" %>
        <% end %>
      </div>
    </div>
  </div>
</article>
<% end %>
